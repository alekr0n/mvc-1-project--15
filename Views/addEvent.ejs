<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Event</title>
    <link rel="stylesheet" href="/public/css/style.css">
</head>
<body>
    <h1>Add event or parties</h1>
    <form action="/add-event" method="post">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required>

        <label for="startDate">Start date:</label>
        <input type="datetime-local" id="startDate" name="startDate" required>

        <label for="endDate">End date:</label>
        <input type="datetime-local" id="endDate" name="endDate" required>
        <p>
            <label for="guests">Guests:</label>
        </p>
        <ul id="container">
            <li id="0">
                <input type="text" id="guests" name="guests" required>
                <button type="button" onclick="removeGuest(this.parentNode.id)">Remove</button>
            </li>
        </ul>
        <div>
            <button type="button" onclick="addGuestField()">Add guest</button>
        </div>
        <input type="submit" value="Save event" style="margin-top: 15px">
        <form action="/cancel>" method="post" style="display: inline-block;">
            <button type="submit">Cancel</button>
        </form>
    </form>

    <script>
        let i=1;
        function addGuestField() {
            const container = document.getElementById('container')
            let li = document.createElement('li');
            li.id = String(i++);
            li.innerHTML = '<input type="text" id="guests" name="guests" required>';
            li.innerHTML += '<button type="button" onclick="removeGuest(this.parentNode.id)">Remove</button>';
            container.appendChild(li);
        }
        function removeGuest(index) {
            var el = document.getElementById(index);
            el.remove();
        }
    </script>
</body>
</html>